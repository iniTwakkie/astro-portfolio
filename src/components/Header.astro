---
import HeaderLink from './HeaderLink.astro';
import site from '../data/site.json';
---

<header class="w-full mb-8 pt-8">
	<nav class="max-w-2xl mx-auto px-4 flex items-center justify-between">
		<a href="/" class="group flex items-center gap-3 text-lg font-bold tracking-tight text-black hover:text-zinc-600">
			<div class="relative w-8 h-8 rounded-full overflow-hidden border border-zinc-200 group-hover:border-zinc-400 transition-colors">
				<img 
					src="/images/headshot.jpg" 
					alt="Headshot" 
					class="w-full h-full object-cover"
				/>
			</div>
			{site.name}
		</a>
		<div class="flex gap-6 text-sm font-medium text-zinc-500">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="https://rxresu.me/dnell.personal/danienellcom" target="_blank">Resume</HeaderLink>
		</div>
	</nav>
</header>
