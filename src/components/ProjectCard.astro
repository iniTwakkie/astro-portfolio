---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { title, shortDesc, tech, codeLink } = project.data;
---

<div class="group py-4 px-3 -mx-3 rounded-lg hover:bg-zinc-100 transition-colors">
    <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-2">
        <h3 class="text-lg font-bold text-zinc-900 group-hover:text-black transition-colors">
            {title}
        </h3>
        <span class="hidden sm:block text-xs text-zinc-500 font-mono">{tech}</span>
    </div>
    
    <p class="text-zinc-600 leading-relaxed mb-3">
        {shortDesc}
    </p>

    <div class="flex items-center gap-4 text-sm">
        {codeLink && (
            <a href={codeLink} target="_blank" class="text-zinc-500 hover:text-black transition-colors font-medium">
                View Code
            </a>
        )}
    </div>
</div>
